<launch>
    <!-- 1、在参数服务其中载入 URDF -->
    <!-- <param name="robot_description" textfile="$(find one_urdf01_rviz)/urdf/xacro/demo05_car_base.urdf" /> -->
    <param name="robot_description" command="$(find xacro)/xacro $(find one_urdf01_rviz)/urdf/xacro/demo05_car_base.urdf.xacro" />

    <!-- 2、启动 rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find one_urdf01_rviz)/config/show_car.rviz" />
    
    <!-- 3、添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

    <!-- 4、添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

    <!-- 5、关节控制节点 -->
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" />

</launch>