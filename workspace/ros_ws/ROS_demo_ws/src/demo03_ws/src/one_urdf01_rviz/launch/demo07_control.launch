<launch>
    <!-- 1、在参数服务其中载入 URDF -->
    <!-- <param name="robot_description" textfile="$(find urdf01_rviz)/urdf/xacro/demo05_car_base.urdf" /> -->
    <param name="robot_description" command="$(find xacro)/xacro $(find one_urdf01_rviz)/urdf/xacro/demo08_car.urdf.xacro" />

    <!-- 2、启动 rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find one_urdf01_rviz)/config/show_car.rviz" />
    
    <!-- 3、添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

    <!-- 4、添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

    <!-- 集成 arbotix 运动控制节点，并且加载参数 -->
    <node pkg="arbotix_python" type="arbotix_driver" name="driver"  output="screen" >
        <rosparam command="load" file="$(find one_urdf01_rviz)/config/control.yaml" />
        <param name="sim" value="true" />
    </node>

</launch>